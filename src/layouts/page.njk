<!DOCTYPE html>
<html lang="en" class="l-fret11ty">
    <head>
        <meta charset="utf-8">
        <title>
           {{ siteName }} &mdash; {{ title or page.fileSlug }}
        </title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.6.0/styles/monokai-sublime.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.6.0/highlight.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/2.3.0/mustache.min.js" type="text/javascript"></script>
        <link rel="stylesheet" href="{{ dist }}/css/fret11ty.css">
        <link rel="stylesheet" href="{{ dist }}/css/example.css">
        <script src="{{ dist }}/js/main.js" type="module"></script>
    </head>

    {% macro mod(arr) %}
        {% for item in arr %}
        {% if page.url != item %}
            {{ pagination.pages[loop.index0].mod }}
        {% endif %}
        {% endfor -%}
    {% endmacro %}
    {% set modClass = mod(pagination.hrefs) | replace("\n", "") | replace(" ", "") %}
    <body class="l-fret11ty-body {{ modClass}}">
        <aside class="l-fret11ty-side border-right">
            <div class="l-fret11ty-side_inner">
                {% include 'aside.njk' %}
            </div>
        </aside>
        <main class="l-fret11ty-main color-bg-inset p-4">
            {{ content | safe }}
        </main>
    </body>
</html>

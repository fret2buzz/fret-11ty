{
  "name": "11ty-styleguide",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npx @11ty/eleventy --config=.eleventy.js",
    "serve": "npx @11ty/eleventy --config=.eleventy.js --serve",
    "dircompare": "node .dircompare",
    "watch": "node ./node_modules/sass/sass.js --load-path=node_modules --no-source-map -w \"./src/scss\":\"./dist/css\"",
    "scss": "node ./node_modules/sass/sass.js --load-path=node_modules --no-source-map \"./src/scss\":\"./dist/css\"",
    "styles": "node ./node_modules/sass/sass.js --load-path=node_modules --no-source-map \"./src/styles\":\"./dist/css\"",
    "dev": "node .dircompare && npm run scss && npm run styles && npm run build",
    "prod": "node .dircompare && npm run scss && npm run styles && cross-env BUILD_ENV=production npm run build"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "cross-env": "^7.0.3",
    "dir-compare": "^4.0.0",
    "postcss": "^8.4.19",
    "postcss-cli": "^10.0.0",
    "sass": "^1.56.1"
  },
  "dependencies": {
    "@primer/css": "^20.5.1"
  },
  "config11ty": {
    "siteName": "Styleguide fret-11ty",
    "pathFiles": "./src/files/",
    "pathStyles": "./src/styles/",
    "pathPages": "./src/pages/",
    "dist": "https://fret-11ty.netlify.app"
  }
}
